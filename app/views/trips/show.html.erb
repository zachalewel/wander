<div class="page-header">
  <%= link_to trips_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_trip_path(@trip), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <%= button_to "Join Trip", trip_users_path, method: :post, params: {user_id: current_user.id, id: @trip.id} %>
  <h1>Show trip</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @trip.title %></dd>

  <dt>Description:</dt>
  <dd><%= @trip.description %></dd>

  <dt>Latitude:</dt>
  <dd><%= @trip.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @trip.longitude %></dd>

  <dt>Start date:</dt>
  <dd><%= @trip.start_date %></dd>

  <dt>End date:</dt>
  <dd><%= @trip.end_date %></dd>

  <dt>Trip notes:</dt>
  <dd><%= @trip.trip_notes %></dd>

  <dt>Attendees</dt>
  <% @trip.users.each do |t|  %>
  <dd><%= t.username %></dd>
      <% end %>

</dl>
