<div class="page-header">
  <%= link_to new_trip_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Trip
  <% end %>
  <h1>Listing trips</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Trip notes</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @trips) do |trip| %>
            <td><%= trip.title %></td>
            <td><%= trip.description %></td>
            <td><%= trip.latitude %></td>
            <td><%= trip.longitude %></td>
            <td><%= trip.start_date %></td>
            <td><%= trip.end_date %></td>
            <td><%= trip.trip_notes %></td>
            <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
